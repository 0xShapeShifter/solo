<Layout title="Alpha template | by Shapeshifter" desc="Single-screen personal portfolio/cv template">
  <div
    class="h-full w-full bg-white dark:bg-black flex flex-col justify-start items-center gap-8 px-4"
  >
    <!-- HEADER -->
    <div
      class="w-full flex flex-col lg:flex-row gap-8 md:gap-0 lg:justify-between lg:items-center bg-gradient-to-tr from-[#0052D4] via-[#4364F7] to-[#6FB1FC] rounded-[24px] p-4 md:p-16 text-black dark:text-white"
    >
      <img
        class="block md:hidden"
        width="128"
        height="128"
        src="/src/assets/pic.png"
        alt="A description of my img."
      />
      <div class="space-y-4 md:space-y-4">
        <h1 class="text-5xl lg:text-8xl text-white">Jensen Lakes</h1>
        <p
          class="w-fit uppercase px-4 py-2 border border-white text-white rounded-full text-base md:text-[24px]"
        >
          digital director
        </p>
      </div>
      <img
        class="hidden md:block"
        width="256"
        height="256"
        src="/src/assets/pic.png"
        alt="A description of my img."
      />
    </div>

    <!-- ABOUT -->
    <div
      class="w-full p-4 md:p-16 border border-black dark:border-white rounded-[24px] text-black dark:text-white"
    >
      <p class="m-auto text-[24px] md:text-[32px] w-full">
        Hi, I'm Jensen. I have over 10 years of experience as a digital director
        with a multidisciplinary background. My main goal is to create
        meaningful products that cause positive disruption.
      </p>
    </div>

