---
import Layout from "../layouts/Layout.astro";


const socialdark = ["/src/assets/social/dark/x.svg", "/src/assets/social/dark/mt.svg", "/src/assets/social/dark/lin.svg", "/src/assets/social/dark/ig.svg", "/src/assets/social/dark/tg.svg", "/src/assets/social/dark/yt.svg"];
const sociallight = ["/src/assets/social/light/x.svg", "/src/assets/social/light/mt.svg", "/src/assets/social/light/lin.svg", "/src/assets/social/light/ig.svg", "/src/assets/social/light/tg.svg", "/src/assets/social/light/yt.svg"];
